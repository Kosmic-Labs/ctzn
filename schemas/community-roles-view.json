{
  "id": "ctzn.network/community-roles-view",
  "title": "Community roles view",
  "description": "Get the role-records in a community.",
  "type": "json-view",
  "parameters": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "minItems": 1,
    "additionalItems": false,
    "items": [
      {"type": "string"},
      {
        "type": "object",
        "properties": {
          "limit": {"type": "number"},
          "lt": {"type": "string"},
          "lte": {"type": "string"},
          "gt": {"type": "string"},
          "gte": {"type": "string"},
          "reverse": {"type": "boolean"}
        }
      }
    ]
  },
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["roles"],
    "properties": {
      "roles": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["seq", "key", "url", "value"],
          "properties": {
            "seq": {"type": "number"},
            "key": {"type": "string"},
            "url": {"type": "string", "format": "uri"},
            "value": {
              "type": "object",
              "required": ["roleId", "createdAt"],
              "properties": {
                "roleId": {
                  "type": "string"
                },
                "permissions": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["permId"],
                    "properties": {
                      "permId": {
                        "type": "string"
                      }
                    }
                  }
                },
                "createdAt": {
                  "type": "string",
                  "format": "date-time"
                }
              }
            }
          }
        }
      }
    }
  }
}