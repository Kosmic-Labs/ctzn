{
  "id": "ctzn.network/follow-view",
  "title": "Follow view",
  "description": "Get an individual follow-record between two users.",
  "type": "json-view",
  "parameters": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "minItems": 2,
    "additionalItems": false,
    "items": [
      {"type": "string"},
      {"type": "string"}
    ]
  },
  "definition": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["url", "subject", "createdAt"],
    "properties": {
      "url": {"type": "string", "format": "uri"},
      "subject": {
        "type": "object",
        "required": ["dbUrl", "userId"],
        "properties": {
          "dbUrl": {
            "type": "string",
            "format": "uri"
          },
          "userId": {
            "type": "string",
            "pattern": ".+@.+"
          }
        }
      },
      "createdAt": {
        "type": "string",
        "format": "date-time"
      }
    }
  }
}